<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.mrlu.sven.dao.IAccountDao">
    <resultMap id="BaseResultMap" type="com.mrlu.sven.domain.Account" >
        <result column="id" property="id" />
        <result column="user_name" property="userName" />
        <result column="password" property="password" />
        <result column="email" property="email" />
        <result column="mobile" property="mobile" />
        <result column="type" property="type" />
        <result column="status" property="status" />
        <result column="create_at" property="createAt" />
        <result column="update_at" property="updateAt" />
        
    </resultMap>

    <sql id="Base_Column_List" >
    id,user_name,password,email,mobile,type,status,create_at,update_at
    </sql>
    
    <insert id="insert" parameterType="com.mrlu.sven.domain.Account" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO account
        (
          id,user_name,password,email,mobile,type,status,create_at,update_at
        )
        VALUES
        (
          #{ id },#{ userName },#{ password },#{ email },#{ mobile },#{ type },#{ status },#{ createAt },#{ updateAt }
        )
    </insert>

    <select id="selectById" resultMap="BaseResultMap" parameterType="java.lang.Long" >
      select 
        <include refid="Base_Column_List" />
      from account
      where id = #{id}
    </select>

    <delete id="deleteById" parameterType="java.lang.Long" >
      update account
      set status = 3
      where id = #{id}
    </delete>

    <select id="getAccountByParams" parameterType="java.util.HashMap" resultMap="BaseResultMap">
      SELECT
      <include refid="Base_Column_List" />
      FROM account t
      WHERE 1=1
        <if test="userName != null">
            and t.user_name = #{ userName }
        </if>
        <if test="password != null">
            and t.password = #{ password }
        </if>
        <if test="email != null">
            and t.email = #{ email }
        </if>
        <if test="mobile != null">
            and t.mobile = #{ mobile }
        </if>
    </select>

    <!-- 根据条件查询数量-->
    <select id="getPageCountByParam" parameterType="java.util.HashMap" resultType="java.lang.Integer">
        SELECT count(t.id)
        FROM account t
        WHERE 1 = 1
        
        <if test="id != null">
            and t.id = #{ id }
        </if>
        <if test="userName != null">
            and t.user_name = #{ userName }
        </if>
        <if test="password != null">
            and t.password = #{ password }
        </if>
        <if test="email != null">
            and t.email = #{ email }
        </if>
        <if test="mobile != null">
            and t.mobile = #{ mobile }
        </if>
        <if test="type != null">
            and t.type = #{ type }
        </if>
        <if test="status != null">
            and t.status = #{ status }
        </if>
        <if test="createAt != null">
            and t.create_at = #{ createAt }
        </if>
        <if test="updateAt != null">
            and t.update_at = #{ updateAt }
        </if>
    </select>

    <select id="getPageListByParam" parameterType="java.util.HashMap" resultMap="BaseResultMap">
        SELECT t.*
        FROM account t
        WHERE 1 = 1
        
        <if test="id != null">
            and t.id = #{ id }
        </if>
        <if test="userName != null">
            and t.user_name = #{ userName }
        </if>
        <if test="password != null">
            and t.password = #{ password }
        </if>
        <if test="email != null">
            and t.email = #{ email }
        </if>
        <if test="mobile != null">
            and t.mobile = #{ mobile }
        </if>
        <if test="type != null">
            and t.type = #{ type }
        </if>
        <if test="status != null">
            and t.status = #{ status }
        </if>
        <if test="createAt != null">
            and t.create_at = #{ createAt }
        </if>
        <if test="updateAt != null">
            and t.update_at = #{ updateAt }
        </if>
        order by t.id desc
        <if test="startIndex != null and pageSize !=null ">
            limit #{startIndex}, #{pageSize}
        </if>
    </select>

</mapper>