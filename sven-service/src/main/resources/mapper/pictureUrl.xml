<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.mrlu.sven.dao.IPictureUrlDao">
    <resultMap id="BaseResultMap" type="com.mrlu.sven.domain.PictureUrl" >
        <result column="id" property="id" />
        <result column="picture_id" property="pictureId" />
        <result column="url" property="url"/>
        <result column="create_at" property="createAt" />
        <result column="isdel" property="isdel" />
    </resultMap>

    <sql id="Base_Column_List" >
    id,picture_id,url,create_at,isdel
    </sql>
    
    <insert id="insert" parameterType="com.mrlu.sven.domain.PictureUrl" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO picture
        (
          id,picture_id,url,create_at
        )
        VALUES
        (
          #{ id },#{pictureId},#{url},#{ createAt }
        )
    </insert>

    <select id="selectById" resultMap="BaseResultMap" parameterType="java.lang.Long" >
      select 
        <include refid="Base_Column_List" />
      from picture
      where id = #{id}
    </select>

    <delete id="deleteById" parameterType="java.lang.Long" >
      update picture
      set isdel = 1
      where id = #{id}
    </delete>

    <delete id="deleteByCategoryId" parameterType="java.lang.Long">
        UPDATE picture
        SET category_id = NULL
        WHERE category_id = #{categoryId}
    </delete>

    <update id="update" parameterType="com.mrlu.sven.domain.PictureUrl">
      UPDATE picture
      SET category_id = #{categoryId}
      WHERE id = #{id}
    </update>

    <!-- 根据条件查询数量-->
    <select id="getPageCountByParam" parameterType="java.util.HashMap" resultType="java.lang.Integer">
        SELECT count(t.id)
        FROM picture t
        WHERE 1 = 1
        
        <if test="id != null">
            and t.id = #{ id }
        </if>
        <if test="pictureId != null">
            and t.picture_id = #{ pictureId }
        </if>
        <if test="createAt != null">
            and t.create_at = #{ createAt }
        </if>
        <if test="isdel != null">
            and t.isdel = #{ isdel }
        </if>
    </select>

    <select id="getPageListByParam" parameterType="java.util.HashMap" resultMap="BaseResultMap">
        SELECT t.*
        FROM picture t
        WHERE 1 = 1
        
        <if test="id != null">
            and t.id = #{ id }
        </if>
        <if test="pictureId != null">
            and t.picture_id = #{ pictureId }
        </if>
        <if test="createAt != null">
            and t.create_at = #{ createAt }
        </if>
        <if test="isdel != null">
            and t.isdel = #{ isdel }
        </if>
        order by t.id desc
        <if test="startIndex != null and pageSize !=null ">
            limit #{startIndex}, #{pageSize}
        </if>
    </select>

</mapper>